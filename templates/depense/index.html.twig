{% extends 'base.html.twig' %}

{% block title %}Depense index{% endblock %}

{% block body %}
    <h1>Depense index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Budget</th>
                <th>Deplacement</th>
                <th>PrixLog</th>
                <th>PrixMat</th>
                <th>Type</th>
                <th>Date</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for depense in depenses %}
            <tr>
                <td>{{ depense.id }}</td>
                <td>{{ depense.budget }}</td>
                <td>{{ depense.deplacement }}</td>
                <td>{{ depense.prixLog }}</td>
                <td>{{ depense.prixMat }}</td>
                <td>{{ depense.type }}</td>
                <td>{{ depense.date ? depense.date|date('Y-m-d') : '' }}</td>
                <td>{{ depense.status }}</td>
                <td>
                    <a href="{{ path('depense_show', {'id': depense.id}) }}">show</a>
                    <a href="{{ path('depense_edit', {'id': depense.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('depense_new') }}">Create new</a>
{% endblock %}
